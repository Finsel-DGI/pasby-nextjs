{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "skipDefaultLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "rootDir": "./src",

  },
  "include": ["src/**/*"],
  "outDir": "./dist-types",
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
  ]
}