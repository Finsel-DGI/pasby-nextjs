{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "skipDefaultLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "outDir": "dist/types",
  "exclude": [
    "node_modules",
    "dist",
  ]
}